POLY_AGENT_DEBUG_MODE=false

# Polymarket Agent Configuration
# Copy this file to .env and fill in your API keys
OPENAI_API_KEY=your_openai_api_key_here
NEWS_API_KEY=your_news_api_key_here

POLYMARKET_MARKET_ID=fixed_market

# Agent Configuration
POLY_AGENT_MODEL=gpt-4o-mini
POLY_AGENT_MAX_STEPS=2
POLY_AGENT_DATA_DIR=data/

# Preflight Check Configuration
POLY_AGENT_MIN_PRICE_CHANGE_BPS=50
POLY_AGENT_MIN_TIME_BETWEEN_RUNS=10
POLY_AGENT_REQUIRE_NEW_NEWS=true
